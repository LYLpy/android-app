<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影部分 -->
    <!-- 个人觉得更形象的表达：top代表下边的阴影高度，left代表右边的阴影宽度。其实也就是相对应的offset，solid中的颜色是阴影的颜色，也可以设置角度等等 -->

    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/dp2"
                android:left="@dimen/dp2"
                android:right="@dimen/dp2"
                android:top="@dimen/dp0" />
            <solid android:color="#f9e6e6e6" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/dp1"
                android:left="@dimen/dp2"
                android:right="@dimen/dp2"
                android:top="@dimen/dp1"   />
            <solid android:color="#f9dcdcdc" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/dp1"
                android:left="@dimen/dp2"
                android:right="@dimen/dp2"
                android:top="@dimen/dp1"   />
            <solid android:color="#f9d7d7d7"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/dp2"
                android:left="@dimen/dp2"
                android:right="@dimen/dp2"
                android:top="@dimen/dp0"   />
            <solid android:color="#f9d2d2d2" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/dp2"
                android:left="@dimen/dp2"
                android:right="@dimen/dp2"
                android:top="@dimen/dp0"  />
            <solid android:color="#f9c1c1c1" />
        </shape>
    </item>
    <!-- 背景部分 -->
    <!-- 形象的表达：bottom代表背景部分在上边缘超出阴影的高度，right代表背景部分在左边超出阴影的宽度（相对应的offset） -->

    <item>
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/dp10" />
        </shape>
    </item>
</layer-list>