<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/select_click_bg"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_exchange_time"
                android:text="20XX.XX.XX   XX:XX:XX"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_rectangle_stroke_gray2">

                <ImageView
                    android:layout_marginLeft="8dp"
                    android:id="@+id/iv_icon"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerVertical="true"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="-40dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/iv_icon"
                    android:background="@drawable/rotate_line"
                    android:layerType="software"
                    android:layout_centerVertical="true"/>

                <RelativeLayout
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/iv_icon">

                    <TextView
                        android:layout_marginBottom="7dp"
                        android:id="@+id/tv_gift_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="XX优惠券"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:textColor="#999999"
                        android:layout_marginBottom="6dp"
                        android:layout_below="@id/tv_gift_title"
                        android:id="@+id/tv_gift_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="14sp"
                        android:text="X张 | 抵用卷" />

                    <TextView
                        android:textColor="#999999"
                        android:id="@+id/tv_time"
                        android:layout_below="@id/tv_gift_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="14sp"
                        android:text="20XX.XX.XX至20XX.XX.XX" />

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>