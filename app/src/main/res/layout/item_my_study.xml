<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_title"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <View
            android:layout_width="@dimen/dp100"
            android:background="@color/bg_gray2"
            android:layout_height="@dimen/dp1"/>
        <TextView
            android:text="我的学习"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp20"/>
        <View
            android:layout_width="@dimen/dp100"
            android:background="@color/bg_gray2"
            android:layout_height="@dimen/dp1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:padding="@dimen/dp10"
        android:background="@drawable/bg_rectangle_stroke_gray2_coner10">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_progress"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"/>
        <net.getlearn.getlearn_android.view.CircleProgressView
            android:id="@+id/circle_progress"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            app:progress_color="@color/yellow"
            app:location_start="top"
            app:progress_width="@dimen/dp3"
            app:direction="counterclockwise"
            android:layout_gravity="center_vertical"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp20">
            <TextView
                android:id="@+id/tv_subject_name"
                android:text="X年级语文X册XX版"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_completion"
                android:layout_marginTop="@dimen/dp5"
                android:text="当前进度：暂未开始学习"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_views"
                android:text="10086人正在学习"
                android:layout_marginTop="@dimen/dp5"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp10"
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/bg_gray2"/>
    <TextView
        android:id="@+id/get_all_subject"
        android:text="查看全部课程"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp10"
        android:textSize="@dimen/sp15"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>