<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:background="@drawable/bg_white_stroke_gray2_10"
                android:paddingHorizontal="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginHorizontal="@dimen/dp10">
    <!--新的学习干货布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dp130">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp11"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/dp3"
            android:paddingVertical="@dimen/dp2"
            android:background="@drawable/bg_red_home_hot"
            android:text="热门"
            android:layout_marginTop="@dimen/dp1"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp16"
        android:lines="2"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/black_333"
        android:text="        XXXX的学习方法"
        android:lineSpacingExtra="@dimen/dp5"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20">

     <ImageView
         android:id="@+id/iv_portrait"
         android:src="@drawable/img_touxiang"
         android:layout_width="@dimen/dp25"
         android:layout_height="@dimen/dp25"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp5">
        <TextView
            android:id="@+id/tv_author"
            android:text="作者XX"
            android:textSize="@dimen/sp13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_333"
            android:layout_marginLeft="@dimen/dp5"/>
        <TextView
            android:id="@+id/tv_views"
            android:text="XXX阅读·日期"
            android:textSize="@dimen/sp13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_author"
            android:gravity="right"/>
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv"
        android:src="@drawable/loading3"
        android:layout_width="@dimen/dp120"
        android:layout_height="@dimen/dp90"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"/>
</RelativeLayout>