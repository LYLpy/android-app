<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_color"
    android:padding="@dimen/dp10"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_msg_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp5">
    <TextView
        android:id="@+id/tv_time_user"
        android:text="20XX-XX-XX"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/sp15"
        android:layout_gravity="center_horizontal"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp5"
        android:layout_marginVertical="@dimen/dp5">
    <ImageView
        android:id="@+id/iv_portrait_user"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:scaleType="fitXY"
        android:src="@drawable/img_touxiang"
        android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:id="@+id/ll_text_msg_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_portrait_user"
            android:layout_marginBottom="@dimen/dp5">
            <ImageView
                android:src="@drawable/img_myfreeback_triangle_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp5"/>
        <TextView
            android:id="@+id/tv_msg_user"
            android:text="XXXXX"
            android:textSize="@dimen/sp18"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:padding="@dimen/dp5"
            android:background="@drawable/bg_white_5"
            android:layout_marginBottom="@dimen/dp5"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_img_msg_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_portrait_user">
        <ImageView
            android:src="@drawable/img_myfreeback_triangle_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp5"/>
        <ImageView
            android:id="@+id/iv_msg_user"
            android:src="@drawable/img01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10"
            android:background="@drawable/bg_white_5"
            android:layout_marginRight="@dimen/dp5"
            android:layout_toRightOf="@+id/iv_portrait_user"/>
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>

    <!--我的消息-->
    <LinearLayout
        android:id="@+id/ll_msg_my"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tv_time_my"
        android:text="20XX-XX-XX"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/sp15"
        android:layout_gravity="center_horizontal"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp5">
        <RelativeLayout
            android:id="@+id/rl_text_msg_my"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_portrait_my"
            android:layout_marginTop="@dimen/dp5">
            <ImageView
                android:id="@+id/iv_text_msg_triangle_my"
                android:src="@drawable/img_myfreeback_triangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginRight="@dimen/dp5"
                android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/tv_msg_my"
            android:text="XXXX"
            android:textSize="@dimen/sp18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp5"
            android:padding="@dimen/dp5"
            android:layout_marginVertical="@dimen/dp5"
            android:background="@drawable/bg_white_5"
            android:layout_toLeftOf="@+id/iv_text_msg_triangle_my"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_img_msg_my"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_portrait_my"
            android:layout_marginTop="@dimen/dp5">
            <ImageView
                android:id="@+id/iv_img_msg_triangle_my"
                android:src="@drawable/img_myfreeback_triangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginRight="@dimen/dp5"
                android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/iv_msg_my"
            android:src="@drawable/img01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10"
            android:background="@drawable/bg_white_5"
            android:layout_toLeftOf="@+id/iv_img_msg_triangle_my"/>
    </RelativeLayout>
        <ImageView
            android:id="@+id/iv_portrait_my"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:scaleType="fitXY"
            android:src="@drawable/img_touxiang"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    </LinearLayout>


</LinearLayout>