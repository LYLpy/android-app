<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp120"
    android:padding="@dimen/dp10"
    android:layout_marginTop="@dimen/dp10"
    android:layout_marginHorizontal="@dimen/dp10"
    android:background="@drawable/bg_white_stroke_gray2_10">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp100"
        android:scaleType="fitXY"
        android:src="@drawable/img01"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp11"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingHorizontal="@dimen/dp3"
                android:paddingVertical="@dimen/dp2"
                android:background="@drawable/bg_red_home_hot"
                android:text="热门"
                android:layout_marginTop="@dimen/dp1"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp16"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:lineSpacingExtra="@dimen/dp5"
                android:text="        XXXXX年级奥数上册"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="课时：XX"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/tv_vip_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员免费"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"
                android:textColor="@color/blue5"
                android:background="@drawable/bg_selector_blue0_1_20"
                android:layout_gravity="center_vertical"
                android:paddingVertical="@dimen/dp5"
                android:paddingHorizontal="@dimen/dp20"/>
            <TextView
                android:id="@+id/views_search_lv"
                android:layout_width="@dimen/dp0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:gravity="right"
                android:text="XXXXX人已学习"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>