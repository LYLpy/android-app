<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color"
    android:orientation="vertical">

    <include layout="@layout/title_edit_phone"></include>
    <LinearLayout
        android:layout_marginTop="22dp"
        android:orientation="vertical"
        android:background="@color/witch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_phone"
                android:layout_marginLeft="18dp"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/witch"
                android:hint="请输入手机号码"
                android:maxLength="11"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/iv_clean_edit_phone"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp15"
                android:src="@drawable/btn_my_personinformation_backspace"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20" />
        </RelativeLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/edit_verify_code"
                android:layout_weight="5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="验证码"
                android:maxLength="8"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="5dp"
                android:background="@color/witch"/>

            <Button
                android:id="@+id/btn_verify_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16sp"
                android:layout_marginRight="26dp"
                android:layout_weight="1"
                android:background="@drawable/selectot_button_blue"
                android:text="获取验证码"
                android:textColor="@color/witch" />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_binding"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="@dimen/dp10"
        android:layout_marginTop="50dp"
        android:background="@drawable/selectot_button_blue"
        android:text="绑定"
        android:textColor="@color/witch"
        android:textSize="@dimen/sp16" />

</LinearLayout>
