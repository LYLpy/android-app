<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/base_color">

    <include layout="@layout/install_title"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/bg_gray2"/>
    <LinearLayout
        android:background="@color/witch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="7dp"
            android:id="@+id/ll_version_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:text="更新版本"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical">

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gx"
                    android:textSize="@dimen/sp16"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/dp8"
                    android:layout_marginRight="@dimen/dp10">
                <ImageView
                    android:id="@+id/iv_arrow_version"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:src="@drawable/icon_arrow"
                    android:padding="@dimen/dp3"
                    android:layout_centerInParent="true"/>
                    <include layout="@layout/tv_badge_layout"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@color/bg_gray2" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:text="删除缓存"
                android:textSize="@dimen/sp16"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <TextView
                    android:id="@+id/tv_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp16"/>

                <ImageView
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp10"
                    android:padding="@dimen/dp3"
                    android:src="@drawable/icon_arrow" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp50">



        <TextView
            android:id="@+id/tv_exit"
            android:background="@drawable/selectot_button_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:text="退出当前账号"
            android:gravity="center"
            android:textColor="@color/yellow"
            android:textSize="@dimen/sp15"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginHorizontal="@dimen/dp10"/>

    </LinearLayout>

</LinearLayout>
