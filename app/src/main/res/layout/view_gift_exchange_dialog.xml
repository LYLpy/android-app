<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/lLayout_bg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_white_5"
              android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_dismiss"
        android:layout_width="@dimen/dp20"
        android:layout_height="@dimen/dp20"
        android:layout_margin="@dimen/dp10"
        android:src="@drawable/btn_my_personinformation_backspace"
        android:layout_gravity="right"/>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp200"
        android:layout_height="@dimen/dp100"
        android:layout_marginTop="@dimen/dp10"
        android:padding="@dimen/dp3"
        android:src="@drawable/loading3"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp16"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp5"/>

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginTop="@dimen/dp5" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp30"
        android:background="@color/line_default_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_neg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp60"
            android:layout_weight="1"
            android:background="@drawable/alert_dialog_left_selector_5"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15" />

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="0.5dp"
            android:layout_height="43dp"
            android:background="@color/line_default_color" />

        <Button
            android:id="@+id/btn_pos"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp60"
            android:layout_weight="1"
            android:background="@drawable/alert_dialog_left_selector_5"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/sp15" />
    </LinearLayout>

</LinearLayout>