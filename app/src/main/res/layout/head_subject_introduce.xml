<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_subject_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X年级语文上册人教版"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp25"
            style="@style/style_title_home"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_subject_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"/>
        <LinearLayout
            android:id="@+id/ll_vip_advert"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginHorizontal="@dimen/dp10"
            android:background="@drawable/btn_selector_gold_35"
            style="@style/style_vip_advert_btn">
            <TextView
                android:id="@+id/tv_vip_advert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_gold"
                android:textSize="@dimen/sp16"
                android:text="会员免费"
                android:layout_marginLeft="@dimen/dp30"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值VIP更多超值礼物"
                android:textColor="@color/black_gold"
                android:textSize="@dimen/sp16"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_teacher_title"
            android:text="授课老师"
            android:textSize="@dimen/sp18"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_333"
            style="@style/marginleft_10dp"
            android:layout_marginTop="@dimen/dp30"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_teacher"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp5"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="课程试看"
            android:textSize="@dimen/sp18"
            android:textStyle="bold"
            android:textColor="@color/black_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/marginleft_10dp"
            android:layout_marginTop="@dimen/dp25"
            android:layout_marginBottom="@dimen/dp5"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/bg_gray2"
            android:layout_marginLeft="@dimen/dp15"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>