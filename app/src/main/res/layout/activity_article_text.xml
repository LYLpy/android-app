<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title_text"></include>
    <View
        android:background="@color/bg_gray2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"/>
    <RelativeLayout
        android:layout_weight="16"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:scrollbars="none"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp13"
                    android:text="文字标题XXX"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019-XX-XX"
                        android:layout_marginLeft="@dimen/dp13"/>

                    <TextView
                        android:id="@+id/tv_click"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp30"
                        android:text="XXX人已读" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_article"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="@dimen/dp13"
                    android:layout_marginTop="12dp"
                    android:text="XXX" />

            </LinearLayout>


        </ScrollView>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginVertical="@dimen/dp2"
                android:background="@color/bg_gray2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_like"
                    android:layout_width="0sp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_courseselection_detailspage_collection" />

                    <TextView
                        android:id="@+id/tv_like"
                        android:textSize="@dimen/sp18"
                        android:textColor="#f9545353"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赞(0)" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_learningdrygoods_share"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:textColor="#f9545353"
                        android:textSize="@dimen/sp18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
