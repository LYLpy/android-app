<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/dp5"
                android:padding="@dimen/dp5"
                android:background="@drawable/bg_white_10_elevation_gray2">
    <ImageView
        android:id="@+id/iv"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/dp85"
        android:layout_height="@dimen/dp100"
        android:layout_marginLeft="@dimen/dp5"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_toRightOf="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:minWidth="@dimen/dp100"
        android:minHeight="@dimen/dp110"
        android:layout_marginLeft="@dimen/dp10">
        <TextView
            android:id="@+id/tv_name"
            android:text="XXX"
            android:textSize="@dimen/sp16"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_honour"
            android:text="优秀青年教师"
            android:textSize="@dimen/sp13"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"/>
        <TextView
            android:id="@+id/tv_grade"
            android:text="X年级"
            android:padding="@dimen/dp3"
            android:textSize="@dimen/sp10"
            android:gravity="left"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_alignParentBottom="true"
            android:adjustViewBounds="true"
            android:maxWidth="@dimen/dp150"
            android:textColor="@color/black"
            android:background="@color/gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"/>
        <TextView
            android:id="@+id/tv_teacher_title"
            android:text="数学高级教师"
            android:padding="@dimen/dp3"
            android:textSize="@dimen/sp10"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:background="@color/gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"/>
    </LinearLayout>
</RelativeLayout>