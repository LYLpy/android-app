<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">
    <LinearLayout
        android:id="@+id/ll_search_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp60">
        <!--<ImageView-->
            <!--android:id="@+id/iv_loading"-->
            <!--android:src="@drawable/loading_thr_screen_2"-->
            <!--android:layout_width="@dimen/dp60"-->
            <!--android:layout_height="@dimen/dp60"/>-->
        <ProgressBar
            android:id="@+id/progressbar_line_1_row_1"
            android:indeterminateDrawable="@drawable/loading2_anim"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:indeterminateDuration="500"/>
        <TextView
            android:text="正在搜索设备中"
            android:textStyle="bold"
            android:textSize="@dimen/sp23"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"/>
        <TextView
            android:text="请保证您的手机和电视连接同一wifi"
            android:textSize="@dimen/sp20"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_thr_screen_controller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp60"
        android:visibility="gone">

        <TextView
            android:text="格灵同步培优投屏中"
            android:textSize="@dimen/sp25"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp20">
        <FrameLayout
            android:layout_width="@dimen/dp70"
            android:layout_height="@dimen/dp70"
            android:background="@drawable/circular_white">
        <ImageView
            android:id="@+id/iv_start"
            android:src="@drawable/play_thr_screen"
            android:layout_width="@dimen/dp65"
            android:layout_height="@dimen/dp65"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginRight="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_gravity="center"
            android:visibility="gone"/>
            <ImageView
                android:id="@+id/iv_pause"
                android:src="@drawable/pause_thr_screen"
                android:layout_width="@dimen/dp35"
                android:layout_height="@dimen/dp45"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_gravity="center"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_quit"
            android:src="@drawable/quit_thr_screen"
            android:layout_width="@dimen/dp70"
            android:layout_height="@dimen/dp70"
            android:background="@drawable/circular_white"
            android:layout_marginLeft="@dimen/dp50"
            android:paddingLeft="@dimen/dp5"
            android:paddingRight="@dimen/dp5"
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp10"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>