<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/main_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"/>

    <!--底部导航栏-->
    <LinearLayout
        android:id="@+id/ll_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:orientation="vertical"
        android:gravity="bottom">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/bg_gray2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/tab_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/menu_iv_1"
                android:layout_above="@+id/menu_tv_1"
                android:src="@drawable/tab_menu_home"
                style="@style/tab_menu_iv"/>

            <TextView
                android:id="@+id/menu_tv_1"
                android:text="首页"
                android:textColor="@drawable/tab_menu_text"
                style="@style/tab_menu_text" />
            <TextView
                android:id="@+id/menu_num_1"
                style="@style/tab_menu_bgnum"
                android:layout_toRightOf="@+id/menu_iv_1"
                android:layout_marginTop="1dp"
                android:text=""
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/menu_iv_2"
                style="@style/tab_menu_iv"
                android:layout_above="@+id/menu_tv_2"
                android:src="@drawable/tab_menu_purchase" />
            <TextView
                android:id="@+id/menu_tv_2"
                android:text="选课"
                android:textColor="@drawable/tab_menu_text"
                style="@style/tab_menu_text"/>
            <TextView
                android:id="@+id/menu_num_2"
                style="@style/tab_menu_bgnum"
                android:layout_toRightOf="@+id/menu_iv_2"
                android:layout_marginTop="1dp"
                android:text=""
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/menu_iv_3"
                android:layout_above="@+id/menu_tv_3"
                style="@style/tab_menu_iv"
                android:src="@drawable/tab_menu_message" />
            <TextView
                android:id="@+id/menu_tv_3"
                android:text="学习"
                android:textColor="@drawable/tab_menu_text"
                style="@style/tab_menu_text"/>
            <TextView
                android:id="@+id/menu_num_3"
                style="@style/tab_menu_bgnum"
                android:layout_toRightOf="@+id/menu_iv_3"
                android:layout_marginTop="1dp"
                android:text=""
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/menu_iv_4"
                android:layout_above="@+id/menu_tv_4"
                style="@style/tab_menu_iv"
                android:src="@drawable/tab_menu_person" />
            <TextView
                android:id="@+id/menu_tv_4"
                android:text="我的"
                android:textColor="@drawable/tab_menu_text"
                style="@style/tab_menu_text"/>
            <TextView
                android:id="@+id/menu_num_4"
                style="@style/tab_menu_bgnum"
                android:layout_toRightOf="@+id/menu_iv_4"
                android:layout_marginTop="1dp"
                android:text=""
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
