<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/witch"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp10"
    android:padding="@dimen/dp6">
    <LinearLayout

        android:id="@+id/ll_couponCondition"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_couponCondition"
            android:text="满xx可用"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/selector_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp6"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp80"
            android:src="@drawable/loading3"
            android:layout_marginLeft="@dimen/dp10"
            android:scaleType="fitXY"/>
        <RelativeLayout
            android:id="@+id/rl_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp5"
            android:background="@color/white">
            <View
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp50"
                android:background="@drawable/rotate_line"
                android:layerType="software"
                android:paddingVertical="@dimen/dp10"
                android:layout_marginLeft="-50dp"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp16">
                <TextView
                    android:id="@+id/tv_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp18"
                    android:text="XX优惠券"
                    android:textStyle="bold"
                    android:lines="2"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:id="@+id/tv_term_of_validity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20XX.XX.XX-20XX.XX.XX"
                    android:textSize="@dimen/sp12"/>
            </LinearLayout>

            <!--<CheckBox-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginRight="5dp"-->
                <!--android:layout_centerVertical="true" />-->

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
