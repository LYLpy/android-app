<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolBar_height">
    <FrameLayout
        android:id="@+id/fl_back"
        android:layout_width="@dimen/dp40"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/iv_back_margin_left"
            android:layout_width="18dp"
            android:layout_height="@dimen/dp20"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_back_black" />
    </FrameLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_hi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp20"
            android:textColor="@color/black_333"
            android:textStyle="bold"
            android:text="Hi"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"/>
        <TextView
            android:id="@+id/tv_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp20"
            android:textColor="@color/black_333"
            android:textStyle="bold"
            android:text="欢迎来到格灵教育"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"/>
        <TextView
            android:id="@+id/tv_send_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/bg_gray6"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="已发送至138XXXXXXXX"
            android:layout_marginLeft="@dimen/dp10"
            android:visibility="gone"/>


        <RelativeLayout
            android:id="@+id/rl_input_verification_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_describe"
            android:layout_marginTop="@dimen/dp50"
            android:layout_marginHorizontal="@dimen/dp10"
            >
            <EditText
                android:id="@+id/edit_verification_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:inputType="number"
                android:theme="@style/MyEditText"
                android:minHeight="@dimen/dp50"
                android:hint="输入验证码"
                android:layout_marginRight="@dimen/dp125"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_marginTop="@dimen/dp5"/>
            <ImageView
                android:id="@+id/iv_clean_verification_code"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="3dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_my_personinformation_backspace"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_get_verification_code"
                android:layout_width="@dimen/dp120"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:text="获取验证码"
                android:clickable="true"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_code"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_invite_code_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp16"
            android:textColor="@color/black_333"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp30"
            android:text="邀请码（选填）"
            android:layout_marginLeft="@dimen/dp10"/>
        <RelativeLayout
            android:id="@+id/rl_input_invite_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_describe"
            android:layout_marginTop="10dp"
            android:paddingTop="@dimen/dp5"
            android:layout_marginHorizontal="@dimen/dp10">
            <EditText
                android:id="@+id/edit_invite_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:inputType="number"
                android:hint="输入邀请码"
                android:theme="@style/MyEditText"
                android:textCursorDrawable="@drawable/color_cursor"/>
            <ImageView
                android:id="@+id/iv_clean_invite_code"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="3dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_my_personinformation_backspace"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@drawable/selectot_button_blue"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp50"
            android:textSize="@dimen/sp16"
            android:layout_marginHorizontal="@dimen/dp10"
            android:text="确认"/>
    </LinearLayout>
</LinearLayout>