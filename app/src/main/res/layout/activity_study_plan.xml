<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@color/base_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        android:layout_gravity="center_vertical"
        android:paddingEnd="10dp"
        android:background="@color/white">
        <FrameLayout
            android:id="@+id/fl_back"
            android:layout_width="@dimen/dp40"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_black"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                style="@style/iv_back_margin_left"/>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学习计划"
            style="@style/style_tool_title"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_margin="@dimen/dp10"
        android:background="@drawable/bg_white_10"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/base_color">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dp20"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp10"
                android:layout_marginHorizontal="@dimen/dp10"
                android:background="@drawable/bg_white_10">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp15"
                    android:text="制定计划，开启学习旅途"/>
                <TextView
                    android:id="@+id/tv_do_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_white_stroke20"
                    android:paddingVertical="@dimen/dp5"
                    android:paddingHorizontal="@dimen/dp10"
                    android:textSize="@dimen/sp13"
                    android:textColor="@color/black"
                    android:text="立即制定"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/bg_white_corner_top_10"
                android:paddingTop="@dimen/dp10"
                android:layout_marginHorizontal="@dimen/dp10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日任务"
                    android:layout_marginLeft="@dimen/dp20"
                    android:textSize="@dimen/dp15"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/bg_gray2"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_height="@dimen/dp1"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_study_plan"
                android:layout_marginTop="-10dp"
                android:paddingTop="@dimen/dp10"
                android:layout_marginHorizontal="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/base_color"
                android:paddingBottom="@dimen/dp10"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>