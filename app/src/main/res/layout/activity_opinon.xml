<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp10">

    <include layout="@layout/opinon_title"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp5">
        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp20">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_deep"
                    android:text="*"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请描述你的问题"
                    android:textColor="@color/black_333"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp16"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/tv_text_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0/500"
                        android:textSize="18dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp100"
            android:gravity="start"
            android:hint="请输入内容"
            android:padding="@dimen/dp2"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/bg_rectangle_stroke_gray2"
            android:layout_marginHorizontal="@dimen/dp20"
            android:layout_marginBottom="@dimen/dp20"
            android:maxLength="500"/>
        <View
            android:background="@color/base_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp10"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp18"
            android:paddingTop="@dimen/dp20">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传图片(长按可删除)"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_img_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="0/4"
                android:layout_alignParentRight="true"
                android:textSize="18dp" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"/>
            <View
                android:id="@+id/view_divider"
                android:background="@color/base_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_phone_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp20"
            android:background="@color/white">
            <TextView
                android:text="*"
                android:textColor="@color/red_deep"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="手机号码"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                android:paddingTop="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
        <EditText
            android:id="@+id/edit_phone"
            android:inputType="number"
            android:padding="@dimen/dp2"
            android:background="@drawable/bg_rectangle_stroke_gray2"
            android:paddingTop="8dp"
            android:textSize="@dimen/sp18"
            android:minHeight="@dimen/dp35"
            android:layout_margin="@dimen/dp20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </FrameLayout>
        <Button
            android:id="@+id/btn_commint"
            android:text="提交反馈"
            android:layout_marginTop="@dimen/dp20"
            android:textColor="@color/white"
            android:layout_marginHorizontal="@dimen/dp10"
            android:background="@drawable/selectot_button_blue"
            android:layout_width="match_parent"
            android:textSize="@dimen/sp16"
            android:layout_height="@dimen/dp45"
            android:layout_marginBottom="@dimen/dp5"/>
    </LinearLayout>

    </ScrollView>

</LinearLayout>
