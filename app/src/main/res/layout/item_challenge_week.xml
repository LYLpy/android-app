<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rectangle_stroke_gray2"
    android:layout_marginHorizontal="@dimen/dp10"
    android:layout_marginVertical="@dimen/dp5">
    <RelativeLayout
        android:id="@+id/rl_plan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/dp10"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/dp10">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成XX任务"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dp10"
                android:textSize="@dimen/sp16"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="奖励XXX积分"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_is_complete"
            android:layout_marginRight="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp10"
            android:paddingHorizontal="@dimen/dp20"
            android:textColor="@color/white"
            android:textSize="@dimen/sp13"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_selector7"
            android:layout_alignParentRight="true"
            android:text="未完成"/>
        <TextView
            android:id="@+id/tv_completion"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:text="1/3"
            android:textSize="@dimen/sp15"
            android:layout_toLeftOf="@+id/tv_is_complete"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_divider"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="@color/bg_gray2"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_height="@dimen/dp1"/>
</LinearLayout>