<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        android:background="@color/witch">

        <ImageView
            android:id="@+id/img_back"
            style="@style/iv_back_margin_left"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp15"
            android:src="@drawable/ic_back_black" />

        <TextView
            style="@style/style_tool_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:text="兑换码" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/dp120"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/img_success"
                android:src="@drawable/img_exchange_code"
                android:layout_width="@dimen/dp220"
                android:layout_height="@dimen/dp200" />
            <TextView
                android:textColor="@color/mcv_text_date_light"
                android:textSize="@dimen/dp22"
                android:text="恭喜你兑换成功"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp50"
                android:layout_width="@dimen/dp300"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="兑换内容:"
                        android:textSize="@dimen/dp18"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:paddingTop="@dimen/dp10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="兑换时间:"
                        android:textSize="@dimen/dp18"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="MissingConstraints" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black_333"
                        android:layout_gravity="center"
                        android:id="@+id/tv_exchange_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="vip7天"
                        android:textSize="@dimen/dp20" />
                    <TextView
                        android:textColor="@color/black_333"
                        android:paddingTop="@dimen/dp10"
                        android:layout_gravity="center"
                        android:id="@+id/tv_exchange_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019.01.01 XX:XX:XX"
                        android:textSize="@dimen/dp18" />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/btn_home"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="@dimen/dp50"
            android:layout_marginRight="@dimen/dp50"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp55"
            android:background="@drawable/selectot_button_blue"
            android:text="返回首页"
            android:textSize="@dimen/sp16"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>