<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dp5"
              android:layout_marginHorizontal="@dimen/dp10"
                android:background="@drawable/bg_rectangle_stroke_gray2">
    <LinearLayout
                android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingVertical="@dimen/dp10"
                    android:paddingLeft="@dimen/dp10">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/dp48"
        android:layout_height="@dimen/dp48"
        android:src="@drawable/img01"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp10">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp20"
                android:textStyle="bold"
                android:text="名字"/>
            <TextView
                android:id="@+id/tv_teacher_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp15"
                android:layout_marginLeft="@dimen/dp10"
                android:text="名字"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/dp5"
            android:id="@+id/rv_teacher_label"
            android:paddingRight="@dimen/dp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_teacher_introduce"
            android:layout_marginTop="@dimen/dp5"
            android:text="老师介绍"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp10"/>
    </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/bg_gray2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"/>
</LinearLayout>